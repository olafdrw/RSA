import time
import math

print "Input public key"
pk = input()
print "Input private key"
pvk = input()
print "Input text"
plaintext = raw_input()

def encrypt(plaintext):
    cipher = "".join(str(ord(char)) for char in plaintext)
    return cipher

c = encrypt(plaintext)

def message_modulus(c):
    cm = (int(c)**pk)%pvk for int in c)
    return cm

cm = message_modulus(c)
print "Cipher message = ", cm

# maybe include hashed intermediate text

# re-write function!
def decrypt(cm):
    text = str(chr(int) for int in cm)
    return text

d = decrypt(cm)
print "Decrypted message = ", d











