import time
import math

print "Input public key"
pk = input()
print "Input private key"
pvk = input()
print "Input text"
plaintext = raw_input()

def encrypt(plaintext):
    cipher = "".join(str(ord(char)) for char in plaintext)
    return cipher

c = encrypt(plaintext)
print "C = ", c

# maybe include hashed intermediate text

def decrypt(cipher):
    text = "".join(str(chr(int)) for int in cipher)
    return text

d = decrypt(cipher)
print "D = ", d

















