import time
import math

print "Input public key"
pk = input()
print "Input private key"
pvk = input()
print "Input text"
plaintext = raw_input()

def encrypt(pk, plaintext):
    cipher = [(ord(char) ** pk) % pvk for char in plaintext)]
    return cipher

def decrypt(pk, cipher):
    final_message = [chr((char**pk)% pvk) for char in cipher]
    return ''.join(final_message)


print "Cipher message = ", final_message

